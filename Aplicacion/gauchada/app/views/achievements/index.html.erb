<h1 align="center"> Listado de logros </h1>

<table class="table table-striped table-bordered" style="width: 90%" align="center">

	<tr>
		<th > Logro </th>
		<th > Descripci√≥n </th>
		<th > Limite inferior </th>
		<th > Limite superior </th>
		<th > Acciones </th>
	</tr>

	<% @achievements.each do |a| %>
		<tr>
			<td align="center"> <%= a.titulo %> </td>
			<td align="center"> <%= a.descripcion %> </td>
			<td align="center"> <%= a.rango_inferior %> </td>
      <td align="center"> <%= a.rango_superior %> </td>
			<td align="center">
				<%= link_to "Editar", edit_achievement_path(a), class: 'btn btn-info btn-sm' %>
				<%= link_to "Eliminar",a,method: :delete, class: 'btn btn-danger btn-sm' %>
			</td>
		</tr>
	<% end %>

	<% if @achievements.size == 0 %>
		<tr align="center"> <td colspan="5"> No hay logros </td> </tr>
	<% end %>

</table>
