<!DOCTYPE html>
<html>
<html>
	<title>Registro</title>
	<link rel="stylesheet" type="text/css" href="aplication.scss">
	<link rel="stylesheet" href="assets/stylesheets/devise.css">
</head>
<body id="index-fondo">

	<div class="formulario-reg">
		<h3>Registrate</h3>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|  %>
			<%= devise_error_messages! %>
			<div class="form-group input-group">
				<label class="sr-only">Email</label>
				<span class="input-group-addon">
						<i class="fa fa-envelope"></i> <%= f.label :email %></span>
				<%= f.email_field :email, required: true, placeholder: 'Ingrese su mail', class: 'form-control' %>
			</div>
			<br>
			<div class="form-group input-group">
				<label class="sr-only">Contraseña</label>
				<span class="input-group-addon">
					<i class="fa fa-key"></i> <%= f.label 'Contraseña' %></span>
				<%= f.password_field :password, autocomplete: "off", placeholder: '7 caracteres como minimo', class: 'form-control'%>
			</div>
			<br>
			<div class="form-group input-group">
				<label class="sr-only">Confirmar contraseña</label>
				<span class="input-group-addon">
					<i class="fa fa-key"></i> <%= f.label 'Contraseña' %></span>
				<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Repetir contraseña', class: 'form-control'%>
			</div>
			<br>

			<div class="field">
				<%= f.label :nombre %><br />
				<%= f.text_field :nombre, required: true, placeholder: 'Ingrese su nombre', class: 'form-control' %>
			</div>

			<div class="field">
				<%= f.label :apellido %><br />
				<%= f.text_field :apellido, required: true, placeholder: 'Ingrese su apellido', class: 'form-control' %>
			</div>

			<div class="field">
				<%= f.label :telefono %><br />
				<%= f.text_field :telefono, required: true, :pattern => '[0-9]{10,16}' ,placeholder: 'Solo numeros, incluir la caracteristica de su pais', class: 'form-control' %>
			</div>

			<div class="field">
				<%= f.label :sexo %><br />
				<%= f.select :sexo, [["Hombre", 1], ["Mujer", 0]], {}, {class: 'form-control'} %>
			</div>  
			<div class="field">
				<%= f.label :pais %><br />
				<%= f.country_select :pais, {}, {class: 'form-control'} %>
			</div>

			<br>
			<div class="form-group input-group date" id="calendario">
					<label class="sr-only">Nombre</label>
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-calendar"></span> <%= f.label :fecha_nacimiento %>
					</span>
					<%= f.date_field :password_confirmation, autocomplete: "off", class: 'form-control'%>
				</div>

			<br/>
			<div class="actions">
				<%= f.submit "Registrar", :class => 'btn btn-default actions'%>
			</div>
			<br/>
		<% end %>
	</div>



</body>
</html>