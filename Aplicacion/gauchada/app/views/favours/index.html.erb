<h1> Listado de Favores </h1>

<table class="table">

	<tr>
		<!-- TODO: Extraer a una clase usando favours.scss -->
		<th style="text-align: center;"> Titulo </th>
		<th style="text-align: center;"> Imagen </th>
		<th style="text-align: center;"> Ciudad </th>
    	<th style="text-align: center;"> Acciones </th>
	</tr>

	<% @favours.each do |favour| %>
		<tr>
			<td> <h4 class: "text-align"><%= favour.titulo %></h4> </td>
			<td> <%= image_tag favour.image_url, class: "max-size" %> </td>
			<td> <%= favour.ciudad %> </td>
			<td>
				 <%= link_to "Mostrar", favour, class: 'btn btn-info btn-sm' %>
				 <%= link_to "Enviar Solicitud", requests_solicitar_path, class: 'btn btn-info btn-sm' %>
				 <!-- TODO agregar el editar si soy propietario de usuario -->
			</td>
		</tr>
	<% end %>

	<% if @favours.size == 0 %>
		<tr> <td colspan="3"> No hay favores </td> </tr>
	<% end %>

</table>
