<!DOCTYPE html>
<html>
<head>
	<title>Gauchada</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

	<%= favicon_link_tag('http://gdurl.com/UBYV') %> <!-- logo.png -->

	<!-- Para bootstrap SIN ICONOS -->
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

</head>
<body>
		<!-- Barra del navegador -->
	<nav class="navbar navbar-default">
		<div class="container" id="menu">
			<div class="navbar-header">
				<div class="brand-centered">
					<%= link_to root_path do %>
						<img class="logo-inicio icon-bar gauchada" title="Logo" src="http://gdurl.com/GY5O">
					<% end %>
				</div>

				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menuDesplegable">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>

			<div id="menuDesplegable" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-left">
					<li class="barra">
						<%= link_to('Favores', favours_path, :method => :get) %>
					</li>
					<li class="barra"><a href="#">Cosas</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li class="barra"><a href="#">Cosas</a></li>
					<% if user_signed_in? %>
						<li class="barra dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
							<i class="fa fa-id-card-o" aria-hidden="true"></i> Usuario <span class="caret"></span></a>
								<ul class="dropdown-menu" role="menu">
									<li class="barra">
										<%= link_to edit_user_registration_path, :method => :get do %>
											<i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar perfil
										<% end %>
									</li>
									<li class="barra">
										<%= link_to  do %>
											<i class="fa fa-tasks" aria-hidden="true"></i> Cuenta
										<% end %>
									</li>
									<% if current_user.admin? %>	
										<li class="barra">
											<%= link_to  do %>
												<i class="fa fa-line-chart" aria-hidden="true"></i> An치lisis
											<% end %>
										</li>
									<% end %>
									<li class="barra">
										<%= link_to destroy_user_session_path, :method => :delete do %>
											<i class="fa fa-power-off" aria-hidden="true"></i> Cerrar sesi칩n
										<% end %>
									
									</li>
								</ul>
							</li>
					<% else %>
						<li class="barra">
							<%= link_to('Iniciar sesi칩n', new_user_session_path) %>
						</li>
						<li class="barra">
							<%= link_to('Registr치te', new_user_registration_path) %>
						</li>
					<% end %>
				</ul>
			</div>
		<!--/.nav-collapse -->
		</div>
	<!--/.container-fluid -->
	</nav>

	<% flash.each do |key, value| %>
		<div class="alert alert-<%= key %> alert-dismissible" role="alert">
			<button class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<ul>
				<li>
					<%= value %>
				</li>
			</ul>
		</div>
	<% end %>
	
	<%= yield %>

		<!-- El pie de pagina -->
	<footer class="footer">
		<div class="container">
			<div class="col-md-4 text-muted">
				&copy; 2016 MasterBranch S.A.
			</div>
			<div class="col-md-4 hoverGris">
				<%= link_to image_tag("http://gdurl.com/GY5O", :class => "logo-foot"), root_path %> <!-- logo.svg -->
			</div>
		  	<div class="col-md-4 text-muted">
				<%= link_to 'Condiciones', legal_terms_path %>
				&nbsp;&nbsp;
				<%= link_to 'Privacidad', legal_privacy_path %>
				&nbsp;&nbsp;
				<%= link_to 'Contacto', about_contact_path %>
			</div>
		</div>
	</footer>


</body>
</html>
