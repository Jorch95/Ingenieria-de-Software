<body class="fondo1">
  <div class="formulario-margen">
<h2 class="titulo">Editar favor</h2>
<% if @favour.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <ul>
      <% @favour.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<%= form_for(@favour) do |f| %>
<div class="formulario-reg">
  	<div class="form-group input-group">
  <label class="sr-only">Titulo</label>
  <span class="input-group-addon">
    <i class="fa fa-pencil"></i> <%= f.label "Titulo" %>
  </span>
  <%= f.text_field :titulo, required: true,
    placeholder: 'Ingrese el titulo', class: "form-control" %>
</div>
  	<div class="form-group input-group">
      <label class="sr-only">Descripcion</label>
      <span class="input-group-addon">
        <i class="fa fa-pencil"></i> <%= f.label "Descripcion" %>
      </span>
    <%= f.text_area :descripcion, required: true,
      placeholder: 'Ingrese la descripcion', class: "form-control" %>
</div>
	<div class="form-group input-group">
    <label class="sr-only">Imagen</label>
    <span class="input-group-addon">
        <i class="fa fa-picure-o" aria-hidden="true"></i><%= f.label "Imagen" %>
    </span>
    <%= f.text_field :image_url , required: false, class: "form-control" %>
</div>
	<div class="form-group input-group">
    <label class="sr-only">Provincia</label>
    <span class="input-group-addon">
        <i class="fa fa-map" aria-hidden="true"></i> <%= f.label "Provincia" %>
    </span>
    <%= f.text_field :provincia, required: true, class: "form-control" %>
</div>
<div class="form-group input-group">
  <label class="sr-only">Ciudad</label>
  <span class="input-group-addon">
      <i class="fa fa-map-marker" aria-hidden="true"></i> <%= f.label "Ciudad" %>
  </span>
  <%= f.text_field :ciudad, required: true, class: "form-control" %>
</div>
<div class="actions">
  <%= f.submit "Guardar", :class => 'btn btn-default actions'%>
</div>
</div>
<% end %>
</div>
</body>
