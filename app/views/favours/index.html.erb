<!DOCTYPE html>

<body class="fondo1">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div id="postlist">
      <%@favours.each do |favour|%>
      <div class="panel" style="background-color: #F5F5F5">
        <div class="panel-heading">
          <div class="text-center">
            <div class="row">
              <div class="col-sm-9">
                <h3 class="pull-left"><%=favour.titulo%></h3>
              </div>
              <div class="col-sm-3">
                <h4 class="pull-right">
                  <small><em><%=favour.fecha%></em></small>
                  <br>
                  <span class="label label-default"><%=favour.ciudad%></span>
                </h4>
              </div>
            </div>
          </div>
        </div>

        <div class="panel-body">
          <div class="thumbnail">
            <%=link_to image_tag(favour.image_url, class: "max-size"),favour%>
          </div>
          <p>
            <%=truncate(favour.descripcion,length: 100)%>
            <% if favour.descripcion.length > 100 %>
            <%=link_to "Leer mas",favour%>
            <%end%>
          </p>
        </div>

        <div class="panel-footer">
          <div class="center">
          <%= link_to "Mostrar", favour, class: 'btn btn-primary btn-sm' %>
          <% if user_signed_in? && current_user.id != favour.user.id %>
          <%= link_to "Enviar Solicitud", requests_solicitar_path, class: 'btn btn-success btn-sm' %>
          <% end %>
          <% if current_user == favour.user %>
          <%= link_to "Editar", edit_favour_path(favour) , class: 'btn btn-info btn-sm' %>
          <% end %>
        </div>
        </div>
      </div>
      <%end%>
      <% if @favours.size == 0 %>
    		<h4 class="center">No hay favores</h4>
    	<% end %>

    </div>
  </div>
</body>
