<!DOCTYPE html>

<body class="fondo1">

  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div id="postlist">

      <div class="panel filtro" style="background-color: #F5F5F5">
        <div class="center">
          <%= form_tag({controller: "favours", action: "index"}, method: "get", :class => "form-inline")  do %>
              <div class="form-group input-group col-md-4">
                  <%= select_tag :filtrado_por,  options_for_select(["Descripcion", "Titulo", "Ciudad", "Provincia", "Fecha decreciente", "Fecha creciente"]), :value => params[:filtrado_por], class: 'form-control' %>
              </div>
              <div class="form-group input-group col-md-4">
                  <%= text_field_tag :criterio, nil, placeholder: 'Criterio de busqueda', :value => params[:criterio], class: 'form-control' %>
              </div>
              <%= submit_tag "Filtrar", :class => 'btn btn-primary actions' %>
              <%= link_to favours_path, method: "get" do %>
                  <i class="fa fa-refresh" aria-hidden="true"></i>
              <% end %>
          <% end %>
        </div>
      </div>

      <%@favours.each do |favour|%>
      <div class="panel" style="background-color: #F5F5F5">
        <div class="panel-heading">
          <div class="text-center">
            <% if favour.image_url== "http://gdurl.com/GY5O" %>
            <div class="row">
              <div class="col-sm-1" style="padding: 0">
                <div style="padding-left: 18%">
                  <%=link_to image_tag(favour.image_url, class: "max-size"),favour%>
                </div>
              </div>
              <div class="col-sm-8">
                <h3 class="pull-left"><%=favour.titulo%></h3>
              </div>
              <div class="col-sm-3">
                <h4 class="pull-right">
                  <small><em><%=favour.created_at.strftime("%d/%m/%Y")%></em></small>
                  <br>
                  <span class="label label-default"><%=favour.ciudad%></span>
                </h4>
              </div>
            </div>
            <%else%>
            <div class="row">
              <div class="col-sm-9">
                <h3 class="pull-left"><%=favour.titulo%></h3>
              </div>
              <div class="col-sm-3">
                <h4 class="pull-right">
                  <small><em><%=favour.created_at.strftime("%d/%m/%Y")%></em></small>
                  <br>
                  <span class="label label-default"><%=favour.ciudad%></span>
                </h4>
              </div>
            </div>
            <%end%>
          </div>
        </div>

        <div class="panel-body">
          <% if favour.image_url != "http://gdurl.com/GY5O" %>
          <div class="thumbnail">
            <%=link_to image_tag(favour.image_url, class: "max-size"),favour%>
          </div>
          <%end%>
          <p>
            <%=truncate(favour.descripcion,length: 100)%>
            <% if favour.descripcion.length > 100 %>
            <%=link_to "Leer mas",favour%>
            <%end%>
          </p>
        </div>

        <div class="panel-footer">
          <div class="center">
          <%= link_to "Mostrar", favour, class: 'btn btn-primary btn-sm' %>
          <% if user_signed_in? && current_user.id != favour.user.id %>
          <%= link_to "Enviar Solicitud", requests_solicitar_path, class: 'btn btn-success btn-sm' %>
          <% end %>
          <% if current_user == favour.user %>
          <%= link_to "Editar", edit_favour_path(favour) , class: 'btn btn-info btn-sm' %>
          <%= link_to "Eliminar",favour,method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "Estas seguro gaucho?" } %>
          <% end %>
        </div>
        </div>
      </div>
      <%end%>
      <% if @favours.size == 0 %>
    		<h4 class="center">No hay favores</h4>
    	<% end %>

    </div>
  </div>
</body>
