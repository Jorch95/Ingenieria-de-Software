<body class="fondo1">
  <div class="formulario-margen">
    <h2>Enviar solicitud para <%= @favour.titulo%></h2>

    <% if @request.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <ul>
          <% @request.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>

    <%= form_for(@request) do |f| %>
    <%= hidden_field_tag :favour_id, @favour.id %>
    <div class="formulario-reg">
      <div class="form-group input-group">
        <label class="sr-only">Descripcion</label>
        <span class="input-group-addon">
          <i class="fa fa-pencil"></i> <%= f.label "Descripcion" %>
        </span>
        <%= f.text_area :descripcion, required: true,
        placeholder: 'Ingrese una descripcion', class: "form-control" %>
      </div>
      <div class="form-group input-group">
        <label class="sr-only">Fecha</label>
        <span class="input-group-addon">
          <i class="fa fa-calendar"></i> <%= f.label 'Fecha' %>
        </span>
        <%= f.date_field :fecha, required: true, class: 'form-control'%>
      </div>
      <div class="actions">
        <%= f.submit "Enviar", :class => 'btn btn-default actions'%>
      </div>
    </div>
    <% end %>
  </div>
</body>
