<div class="container">
	<div class="row">
		<div class="col-md-7 ">
			<div class="panel panel-default">
				<div class="panel-heading center">  <h4 >Perfil de usuario</h4></div>
				<div class="panel-body">
					<div class="box box-info">
						<div class="box-body">
							<div class="col-sm-3">
							</div>
							<div class="col-sm-6">
								<div>
									<h3 style="color:orange"><%= @user.nombre %> <%= @user.apellido %></h3>
								</div>
								<div class="clearfix"></div>
								<hr style="margin:5px 0 5px 0;">

								<div class="col-sm-5 col-xs-6 tital " >Puntaje:</div><div class="col-sm-7"> <%= @user.puntaje %></div>
								<div class="clearfix"></div>
								<div class="bot-border"></div>

								<div class="col-sm-5 col-xs-6 tital " >Logro:</div><div class="col-sm-7"> <%= @user.achievement.titulo %></div>
								<div class="clearfix"></div>
								<div class="bot-border"></div>

								<div class="col-sm-5 col-xs-6 tital " >Pais:</div><div class="col-sm-7"> <%= @user.pais %></div>
								<div class="clearfix"></div>
								<div class="bot-border"></div>

								<div class="col-sm-5 col-xs-6 tital " >Email:</div><div class="col-sm-7"> <%= @user.email %></div>
								<div class="clearfix"></div>
								<div class="bot-border"></div>

								<div class="col-sm-5 col-xs-6 tital " >Telefono:</div><div class="col-sm-7"> <%= @user.telefono %></div>
								<div class="clearfix"></div>
								<div class="bot-border"></div>

							</div>
						</div>


					</div>
				</div>
			</div>
			<script>
			$(function() {
				$('#profile-image1').on('click', function() {
					$('#profile-image-upload').click();
				});
			});
			</script>
		</div>
		<div class="col-md-5">
			<div class=" panel panel-default">
				<div class="panel-heading center"> <h4> Mis calificaiones</h4></div>
					<div class="panel-body">

						<% if @user.grades.any? %>
						<%=@user.grades.where(calificacion: true).size%> <i class="fa fa-thumbs-up"></i>
						<%=@user.grades.where(calificacion: false).size%> <i class="fa fa-thumbs-down"></i>
						<table class="table table-striped table-bordered" style="width: 100% ; background-color: #ffa141" align="center">
							<tr>
								<th> Calificacion </th>
								<th> Descripcion </th>
							</tr>
							<% @user.grades.each do |g| %>
							<tr>
								<td>
									<% if g.calificacion %>
									<i class="fa fa-thumbs-up"></i>
									<%else%>
									<i class="fa fa-thumbs-down"></i>
									<%end%>
								</td>
								<td> <%= g.descripcion %> </td>
							</tr>
							<% end %>
						</table>
						<%else%>
						<h5 class="center">No posee calificaciones</h5>
						<%end%>
					</div>
				</div>
			</div>
		</div>
	</div>
